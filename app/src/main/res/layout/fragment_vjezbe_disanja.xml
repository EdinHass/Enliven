<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vjezbe_disanja"
    android:background="@drawable/gradient_dark_purple">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               >
           <TextView
               android:layout_marginHorizontal="20dp"
               android:layout_marginVertical="20dp"
               android:id="@+id/textnaslov"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/alata"
               android:text="Vježbe disanja"
               android:textColor="@color/white"
               android:textSize="30dp"
               android:typeface="normal"
               />


           <LinearLayout
               android:id="@+id/linearLayout"
               android:layout_width="80dp"
               android:layout_height="2dp"
               android:background="@color/white"
               android:layout_marginHorizontal="20dp"
               android:orientation="horizontal"
               android:layout_marginBottom="20dp"
               android:layout_below="@+id/textnaslov"/>

               <TextView
                   android:layout_marginStart="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/alata"
                   android:text="Izaberi vježbu disanja za:"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   android:layout_marginBottom="20dp"
                   />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_marginBottom="20dp"
                   android:orientation="horizontal"
                   android:layout_gravity="center"
                   android:gravity="center">

                   <RelativeLayout
                       android:id="@+id/zasan1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="40dp"
                       android:layout_toStartOf="@+id/zaopustanje1"
                       >

                       <RelativeLayout
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:background="@drawable/circle_background_purple"
                           android:clickable="true"
                           android:id="@+id/zasan">

                           <LinearLayout
                               android:id="@+id/ikonaSan"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:orientation="vertical"
                               android:layout_centerInParent="true"
                               android:gravity="center">
                               <ImageView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/sleep__2_" />

                           </LinearLayout>

                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_below="@+id/zasan"
                           android:layout_centerHorizontal="true"


                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/alata"
                               android:text="San"
                               android:textColor="@color/white"
                               android:textSize="18dp"
                               />

                       </RelativeLayout>
                   </RelativeLayout>


                   <RelativeLayout
                       android:id="@+id/zaopustanje1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="40dp"
                       >

                       <RelativeLayout
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:background="@drawable/circle_background_purple"
                           android:clickable="true"
                           android:id="@+id/zaopustanje">

                           <LinearLayout
                               android:id="@+id/ikonaOpustanje"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:orientation="vertical"
                               android:layout_centerInParent="true"
                               android:gravity="center">
                               <ImageView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/relax" />

                           </LinearLayout>

                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_below="@+id/zaopustanje"
                           android:layout_centerHorizontal="true"


                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/alata"
                               android:text="Opuštanje"
                               android:textColor="@color/white"
                               android:textSize="18dp"
                               />

                       </RelativeLayout>
                   </RelativeLayout>

               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_marginBottom="20dp"
                   android:orientation="horizontal"
                   android:layout_gravity="center"
                   android:gravity="center">

                   <RelativeLayout
                       android:id="@+id/zafokus1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="40dp"
                       android:layout_toStartOf="@+id/zaravnotezu1"
                       >

                       <RelativeLayout
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:background="@drawable/circle_background_purple"
                           android:clickable="true"
                           android:id="@+id/zafokus">

                           <LinearLayout
                               android:id="@+id/ikonaFokus"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:orientation="vertical"
                               android:layout_centerInParent="true"
                               android:gravity="center">
                               <ImageView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/focus__2_" />

                           </LinearLayout>

                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_below="@+id/zafokus"
                           android:layout_centerHorizontal="true"


                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/alata"
                               android:text="Fokus"
                               android:textColor="@color/white"
                               android:textSize="18dp"
                               />

                       </RelativeLayout>
                   </RelativeLayout>


                   <RelativeLayout
                       android:id="@+id/zaravnotezu1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="40dp"
                       >

                       <RelativeLayout
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:background="@drawable/circle_background_purple"
                           android:clickable="true"
                           android:id="@+id/zaravnotezu">

                           <LinearLayout
                               android:id="@+id/ikonaRavnoteza"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:orientation="vertical"
                               android:layout_centerInParent="true"
                               android:gravity="center">
                               <ImageView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/balance__2_" />

                           </LinearLayout>

                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_below="@+id/zaravnotezu"
                           android:layout_centerHorizontal="true"


                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/alata"
                               android:text="Ravnotežu"
                               android:textColor="@color/white"
                               android:textSize="18dp"
                               />

                       </RelativeLayout>
                   </RelativeLayout>

               </RelativeLayout>
           </LinearLayout>
       </ScrollView>
   </RelativeLayout>



</FrameLayout>