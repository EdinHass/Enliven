<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundSound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_purple"
    tools:context=".ui.sleep.meditacije.vjezba_disanja1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vjezbaIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alata"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:typeface="normal" />


        <ProgressBar
            android:id="@+id/progressBarMain"
            style="@style/ThinCircularDeterminateProgressBar"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/vjezbaSlika"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle_background"
            app:tint="@color/Pallete2" />

        <TextView
            android:id="@+id/text"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="-120dp"
            android:gravity="center"
            android:text="Pokreni"
            android:textColor="@color/Pallete1"
            android:textSize="30dp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/soundcontrol"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="350dp">

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="60dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/alata"
                android:text="Start" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>