<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_dark_purple"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/textpocetni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Kako se osjećaš?"
        android:textColor="@color/Pallete1"
        android:textSize="48sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <ImageView
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textpocetni" />

    <LinearLayout
        android:id="@+id/Cards"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dnevnikcard"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_margin="16dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/new_card_light_dark"
            android:clickable="true">

            <TextView
                android:id="@+id/textDnevnik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="216dp"
                android:layout_marginBottom="124dp"
                android:fontFamily="@font/alata"
                android:text="Dnevnik"
                android:textColor="@color/Pallete1"
                android:textSize="36sp"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.378" />

            <TextView
                android:id="@+id/aboutdnevnik"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="135dp"
                android:layout_marginBottom="82dp"
                android:fontFamily="@font/alata"
                android:text="Zapiši kako se osjećaš"
                android:textColor="@color/Pallete1"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDnevnik"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="153dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="120dp"
                android:src="@drawable/writting_file_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textDnevnik"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/osjecanjecard"
            android:layout_width="wrap_content"
            android:layout_height="173dp"
            android:layout_margin="16dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/new_card_light_dark"
            android:clickable="true">

            <TextView
                android:id="@+id/textOsjecanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="184dp"
                android:layout_marginBottom="124dp"
                android:fontFamily="@font/alata"
                android:text="Osjećanje"
                android:textColor="@color/Pallete1"
                android:textSize="36sp"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.378" />

            <TextView
                android:id="@+id/aboutosjecanje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="193dp"
                android:layout_marginBottom="77dp"
                android:fontFamily="@font/alata"
                android:text="Kako se danas osjećaš?"
                android:textColor="@color/Pallete1"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textOsjecanja" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="109dp"
                android:src="@drawable/mood_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textOsjecanja"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>