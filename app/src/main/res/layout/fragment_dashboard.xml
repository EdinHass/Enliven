<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_purple"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/curved_dark"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/textpocetni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:text="San"
                        android:textFontWeight="800"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:typeface="normal" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alata"
                    android:text="Citati"
                    android:textColor="@color/PalleteLightText"
                    android:textSize="14dp" />

                <HorizontalScrollView
                    android:id="@+id/citati_story"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginVertical="20dp">

                    <LinearLayout
                        android:id="@+id/citati"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/alata"
                    android:text="Istaknuto"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/PalleteLightText"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/enlivensocial"
                    android:padding="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="250dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/curved_dark"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/textCardSounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Enliven"
                            android:textFontWeight="1000"
                            android:textColor="@color/Pallete3"
                            android:textSize="30dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Social"
                            android:textColor="@color/white"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Pridruži se"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/Pallete3"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textCardSounds"
                        android:src="@drawable/ambient_illustration6"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/card2"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/curved_dark"
                        android:orientation="vertical"
                        android:paddingEnd="0dp">

                        <TextView
                            android:id="@+id/brojBilj"
                            android:layout_marginTop="25dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Savjeti"
                            android:textColor="@color/white"
                            android:textSize="30dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="za raspoloženje"
                            android:textColor="@color/Pallete2"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ambient_illustration4"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/vodic"
                        android:layout_toEndOf="@id/card2"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="200dp"
                        android:layout_width="fill_parent"
                        android:padding="20dp"
                        android:background="@drawable/curved_dark"
                        android:outlineAmbientShadowColor="@android:color/transparent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/timeUntil1"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alata"
                                android:text="Vodič"
                                android:textColor="@color/white"
                                android:textSize="30dp" />

                            <TextView
                                android:id="@+id/timeUntil2"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alata"
                                android:text="za emocije"

                                android:textColor="@color/Pallete2"
                                android:textSize="18dp" />

                            <RelativeLayout
                                android:id="@+id/socialinfo"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:background="@drawable/curved_light">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/alata"
                                    android:text="Započni"
                                    android:textColor="@color/Pallete2"
                                    android:textSize="14dp"></TextView>

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>



                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/alata"
                    android:text="Istraži"
                    android:textColor="@color/PalleteLightText"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/dnevnikcard"
                    android:padding="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="250dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/curved_dark"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/textCardSounds1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Emotion"
                            android:textFontWeight="1000"
                            android:textColor="@color/Pallete3"
                            android:textSize="30dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Book"
                            android:textColor="@color/white"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Istraži"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/Pallete3"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/textCardSounds1"
                        android:src="@drawable/ambient_illustration2" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/curved_dark"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/historijaem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:text="Historija osjećanja:"
                        android:textColor="@color/Pallete2"
                        android:textSize="14sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/nohisttext"
                        android:visibility="gone"
                        android:layout_below="@id/historijaem"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:layout_marginTop="10dp"
                        android:text="Nemate zabilježenih osjećanja"
                        android:textColor="@color/PalleteLightText"
                        android:textSize="14sp"
                        android:typeface="normal" />


                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/historijaem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/icon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/iconmental"/>
                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/icon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/iconmental"/>
                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/icon3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/iconmental"/>
                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/icon4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/iconmental"/>
                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/icon5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/iconmental"/>


                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/alata"
                    android:text="Statistika"
                    android:textColor="@color/PalleteLightText"
                    android:textSize="14dp" />
                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:id="@+id/myenliven"
                    android:padding="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="260dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/curved_dark"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moj Enliven Level"
                            android:fontFamily="@font/alata"
                            android:textSize="30dp"
                            android:textColor="@color/Pallete2"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/lvlBar"
                                style="@style/CircularDeterminateProgressBar"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:id="@+id/lvlText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="37dp"
                                android:fontFamily="@font/alata"
                                android:text="5"
                                android:textColor="@color/Pallete2"
                                android:textSize="42dp" />
                            <TextView
                                android:id="@+id/textCurrentXP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/lvlBar"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/alata"
                                android:text="15/100 XP"
                                android:textColor="@color/Pallete2"
                                android:textSize="18dp" />

                        </RelativeLayout>
                                <com.anychart.AnyChartView
                                android:id="@+id/lvlChart"
                                android:layout_margin="20dp"
                                android:layout_width="200dp"
                                android:layout_height="150dp"/>
                    </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="60dp"
                    android:padding="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/curved_dark"
                    android:outlineAmbientShadowColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enliven Streaks"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/alata"
                            android:textSize="30dp"
                            android:textColor="@color/Pallete2"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:id="@+id/fireImg"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/fire_icon"
                                    app:tint="@color/Pallete1" />

                                <TextView
                                    android:layout_marginTop="20dp"
                                    android:id="@+id/streakText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/alata"
                                    android:text="5"
                                    android:textColor="@color/Pallete2"
                                    android:textSize="30dp" />


                            </RelativeLayout>
                            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                                android:layout_marginStart="20dp"
                                android:layout_gravity="center"
                                style="@style/CalenderViewCustom"
                                app:mcv_weekDayTextAppearance="@style/CalenderViewWeekCustomText"
                                app:mcv_headerTextAppearance="@style/CalenderViewWeekCustomText"
                                app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
                                android:id="@+id/streaksCalender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>