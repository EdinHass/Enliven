<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Zašto meditacija?"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textFontWeight="800"
            android:typeface="normal" />

        <LinearLayout

            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginVertical="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:background="@drawable/curved_dark"
            android:padding="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/meditacija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="Šta je meditacija?"
                android:textColor="@color/Pallete3"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/alata"/>

            <TextView
                android:id="@+id/meditacijatext"
                android:layout_marginTop="20dp"
                android:layout_below="@id/meditacija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="@string/meditacija_info1"
                android:textColor="@color/Pallete2"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:fontFamily="@font/alata"/>
            <ImageView
                android:layout_marginTop="40dp"
                android:layout_below="@id/meditacijatext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/meditacija"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:background="@drawable/curved_dark"
            android:padding="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/meditacija1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="Korist meditacije"
                android:textColor="@color/Pallete3"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/alata"/>

            <TextView
                android:id="@+id/meditacijatext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meditacija1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/alata"
                android:text="@string/meditacija_info2"
                android:textColor="@color/Pallete2"
                android:textSize="14dp" />

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_below="@id/meditacijatext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/meditacija2"></ImageView>

        </RelativeLayout>




    </LinearLayout>
</ScrollView>