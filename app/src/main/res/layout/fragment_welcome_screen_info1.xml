<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome_screen_info1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/question_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kako se zovete?"
            android:textColor="@color/Pallete1"
            android:textSize="32sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alata"/>

        <EditText
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/PalleteLightText"
            android:inputType="textPersonName"
            android:hint="VaÅ¡e ime" />

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="left"
            android:text="NAZAD"
            android:background="@color/transparent"
            android:focusable="false"
            android:textColor="@color/PalleteLightText"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="-80dp"
            android:background="@color/transparent"
            android:text="NASTAVI"
            android:textColor="@color/PalleteLightText" />


    </LinearLayout>

</FrameLayout>