<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome_sleep">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kada je vaÅ¡e vrijeme za spavanje?"
            android:layout_marginEnd="20dp"
            android:textColor="@color/Pallete1"
            android:textSize="32sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alata"/>

        <TimePicker
            android:id="@+id/timeSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:headerBackground="@color/Pallete1"
            android:numbersSelectorColor="@color/Pallete1" />

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="left"
            android:text="NAZAD"
            android:background="@color/transparent"
            android:focusable="false"
            android:textColor="@color/PalleteLightText"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="-80dp"
            android:background="@color/transparent"
            android:text="NASTAVI"
            android:textColor="@color/PalleteLightText" />


    </LinearLayout>

</FrameLayout>