<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="10dp"
    android:elevation="3dp"
    android:background="@color/Pallete0">

    <ImageView
        android:id="@+id/piclist"
        android:layout_width="64dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/icon_laptop" />

    <TextView
        android:id="@+id/titlelist"
        android:layout_width="298dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Preostalo jos do cilja"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/piclist"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titlelist1"
        android:layout_width="158dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Preostalo jos do cilja:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/piclist"
        app:layout_constraintTop_toBottomOf="@+id/titlelist"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/minuslistbtn"
        android:layout_width="41dp"
        android:layout_height="31dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titlelist"
        app:srcCompat="@drawable/check" />

    <TextView
        android:id="@+id/numberItemTxt"
        android:layout_width="18dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:textColor="@color/light_gray"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/minuslistbtn"
        app:layout_constraintTop_toTopOf="@+id/minuslistbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>