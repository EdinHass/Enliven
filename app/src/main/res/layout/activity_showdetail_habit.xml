<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_purple">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:text="title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/pichabit"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            app:srcCompat="@drawable/icon_laptop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/postcilj"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Postavi cilj:"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postciljopis"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="60dp"
            android:text="koliko sati/km/koja količina?"
            android:textColor="@color/light_gray"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minusBtn"
                android:layout_width="81dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/minus_button" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                android:textSize="45dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/plusBtn"
                android:layout_width="81dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/pluss_button" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/habit_background"
        android:gravity="center"
        android:text="Dodaj"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


</androidx.constraintlayout.widget.ConstraintLayout>