<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_purple"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/curved_dark"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textpocetni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata"
                        android:text="Navike"
                        android:textColor="@color/white"
                        android:textFontWeight="800"
                        android:textSize="30sp"
                        android:typeface="normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/cardhabit"
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/curved_dark"
                        android:orientation="vertical"
                        android:paddingEnd="0dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="20dp"
                            android:fontFamily="@font/alata"
                            android:text="Navike"
                            android:textColor="@color/Pallete2"
                            android:textSize="30dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/pic_habits" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/cardtodo"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_toEndOf="@id/cardhabit"
                        android:background="@drawable/curved_dark"
                        android:orientation="vertical"
                        android:paddingEnd="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="20dp"
                            android:fontFamily="@font/alata"
                            android:text="To-Do"
                            android:textColor="@color/Pallete2"
                            android:textSize="30dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/to_do4" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/curved_dark"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:padding="30dp">

            <LinearLayout
                android:id="@+id/textprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Moj"
                    android:textColor="@color/Pallete3"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Profil"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/alata"
                    android:text="IstraÅ¾i"
                    android:textColor="@color/Pallete3"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="168dp"
                android:layout_height="158dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/textprofile"
                android:src="@drawable/profile1" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/alata"
            android:text="Dodane navike:"
            android:textColor="@color/Pallete2"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/emptyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/alata"
            android:text="Nemate dodanih navika"
            android:textColor="@color/PalleteLightText"
            android:textSize="14dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewfinall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            tools:visibility="gone" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>