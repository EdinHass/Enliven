<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark_purple"
    tools:context=".main_habits">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Navike"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textFontWeight="800"
            android:typeface="normal" />

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginTop="20dp" />

    </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/alata"
                android:text="Istaknuto"
                android:textColor="@color/PalleteLightText"
                android:textSize="14dp" />


        <RelativeLayout
            android:id="@+id/listanavika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/curved_dark"
            android:padding="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/icon_list" />


            <TextView
                android:id="@+id/txtlistanavika"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:fontFamily="@font/alata"
                android:text="Lista dodanih navika"
                android:textColor="@color/Pallete2"
                android:textSize="18sp"
                android:typeface="normal" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dodajnaviku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/curved_dark"
            android:padding="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/icon_pluss" />


            <TextView
                android:id="@+id/txtdodajnaviku"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:fontFamily="@font/alata"
                android:text="Dodaj naviku"
                android:textColor="@color/Pallete2"
                android:textSize="18sp"
                android:typeface="normal" />

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/alata"
                    android:text="Istraži"
                    android:textColor="@color/PalleteLightText"
                    android:textSize="14dp" />


                <RelativeLayout
                    android:id="@+id/habitsinfo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/curved_dark"
                    android:outlineAmbientShadowColor="@android:color/transparent"
                    android:padding="30dp">


                    <LinearLayout
                        android:id="@+id/textCardSounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Zašto"
                            android:textColor="@color/Pallete3"
                            android:textFontWeight="1000"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Navike?"
                            android:textColor="@color/white"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/alata"
                            android:text="Saznaj više"
                            android:textColor="@color/Pallete3"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/textCardSounds"
                        android:src="@drawable/pic_learn" />


                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>