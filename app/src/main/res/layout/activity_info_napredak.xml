<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_funkcija"
    android:background="@drawable/gradient_dark_purple">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Lekcija 6: Napredak"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textFontWeight="800"
                android:typeface="normal" />

            <LinearLayout

                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginVertical="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/curved_dark"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="1. Dio"
                    android:textColor="@color/Pallete3"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt10"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/dio22"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="374dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/curved_dark"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="2. Dio"
                    android:textColor="@color/Pallete3"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt1"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/dio23"
                    android:textColor="@color/Pallete2"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="346dp"
                    android:layout_height="111dp"
                    android:layout_below="@id/txt2"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/pic_chechboxes"></ImageView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/curved_dark"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="3. Dio"
                    android:textColor="@color/Pallete3"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt3"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/dio24"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/curved_dark"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="4. Dio"
                    android:textColor="@color/Pallete3"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt7"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/dio25"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="363dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/curved_dark"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="5. Dio"
                    android:textColor="@color/Pallete3"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt15"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/dio26"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="356dp"
                    android:layout_height="159dp"
                    android:layout_below="@id/txt14"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/pic_loading"></ImageView>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>