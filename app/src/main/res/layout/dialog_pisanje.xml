<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Zašto da dijeliš svoje emocije?"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textFontWeight="800"
            android:typeface="normal" />

        <LinearLayout

            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginVertical="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_dark"
            android:padding="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/zasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="Zašto da dijeliš svoje emocije?"
                android:textColor="@color/Pallete3"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/alata"/>

            <TextView
                android:id="@+id/zastotext"
                android:layout_marginTop="20dp"
                android:layout_below="@id/zasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="@string/zasto_info"
                android:textColor="@color/Pallete2"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:fontFamily="@font/alata"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:background="@drawable/curved_dark"
            android:padding="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="Enliven Social"
                android:textColor="@color/Pallete3"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/alata"/>

            <TextView
                android:id="@+id/ambtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/social"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/alata"
                android:text="@string/social_info"
                android:textColor="@color/Pallete2"
                android:textSize="14dp" />

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_below="@id/ambtext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/undraw_chatting_re_j55r"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/curved_dark"
            android:padding="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/emotionb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="Emotion book"
                android:textColor="@color/Pallete3"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/alata"/>

            <TextView
                android:id="@+id/emotiontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emotionb"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/alata"
                android:text="@string/emotion_info"
                android:textColor="@color/Pallete2"
                android:textSize="14dp" />

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_below="@id/emotiontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/undraw_note_list_re_r4u9"></ImageView>

        </RelativeLayout>




    </LinearLayout>
</ScrollView>