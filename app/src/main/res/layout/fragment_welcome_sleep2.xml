<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome_sleep2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan spavanja"
            android:layout_marginEnd="20dp"
            android:textColor="@color/Pallete1"
            android:textSize="32sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/alata"/>



        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/SixHourPlanCard"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_width="370dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/simple_purple_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6-Satni Plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alata"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nije preporučljivo"
                    android:textColor="@color/Pallete1"
                    android:fontFamily="@font/alata"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:src="@drawable/no_time_illustration"
                android:layout_marginTop="-180dp"
                android:layout_marginLeft="200dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/SevenHourPlanCard"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_width="370dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/simple_purple_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-Satni Plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alata"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Srednje"
                    android:textColor="@color/Pallete1"
                    android:fontFamily="@font/alata"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:src="@drawable/time_illustration"
                android:layout_marginTop="-200dp"
                android:layout_marginLeft="180dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/EightHourPlanCard"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_width="370dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@drawable/simple_purple_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8-Satni Plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alata"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prepoučeno"
                    android:textColor="@color/Pallete1"
                    android:fontFamily="@font/alata"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/chill_illustration"
                android:layout_marginTop="-180dp"
                android:layout_marginLeft="190dp"/>
        </LinearLayout>




    </LinearLayout>

</FrameLayout>