<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcomescreen.welcome_sleep2">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan spavanja"
            android:textColor="@color/Pallete1"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"/>



        <LinearLayout
            android:id="@+id/SixHourContainer"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/SixHourPlanCard"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/curved_dark">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6-Satni Plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alata"
                    android:textSize="18dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nije preporučljivo"
                    android:textColor="@color/PalleteLightText"
                    android:fontFamily="@font/alata"
                    android:textSize="14dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:src="@drawable/no_time_illustration"
                android:layout_marginTop="-145dp"
                android:layout_marginLeft="210dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/SevenHourContainer"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/SevenHourPlanCard"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/curved_dark">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-Satni Plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alata"
                    android:textSize="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Srednje"
                    android:textColor="@color/PalleteLightText"
                    android:fontFamily="@font/alata"
                    android:textSize="14dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:src="@drawable/time_illustration"
                android:layout_marginTop="-180dp"
                android:layout_marginLeft="180dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/EightHourContainer"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/EightHourPlanCard"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/curved_dark">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8-Satni Plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/alata"
                    android:textSize="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prepoučeno"
                    android:textColor="@color/Pallete3"
                    android:fontFamily="@font/alata"
                    android:textSize="14dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@drawable/chill_illustration"
                android:layout_marginTop="-150dp"
                android:layout_marginLeft="190dp"/>
        </LinearLayout>




    </LinearLayout>

</RelativeLayout>