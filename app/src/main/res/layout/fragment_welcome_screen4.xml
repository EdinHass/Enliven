<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome_screen4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/sleep_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enliven San"
            android:textColor="@color/Pallete3"
            android:textSize="32sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zdravije spavajte uz posebno izabrane zvukove i muziku za spavanje."
            android:textColor="@color/Pallete1"
            android:textSize="26sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/alata"/>

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:text="NAZAD"
            android:background="@color/transparent"
            android:textColor="@color/PalleteLightText"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="-80dp"
            android:background="@color/transparent"
            android:text="ZAPOÄŒNI"
            android:textColor="@color/Pallete3" />
    </LinearLayout>

</FrameLayout>