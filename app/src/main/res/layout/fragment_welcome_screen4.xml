<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcomescreen.welcome_screen4">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@id/ll1"
            android:src="@drawable/sleep_image" />
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal" />

        <TextView
            android:layout_below="@id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enliven San"
            android:id="@+id/textSan"
            android:textColor="@color/Pallete3"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:layout_below="@id/textSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zdravije spavajte uz posebno izabrane zvukove i muziku za spavanje."
            android:textColor="@color/Pallete1"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/alata"/>
    </RelativeLayout>

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:text="NAZAD"
            android:background="@color/transparent"
            android:textColor="@color/PalleteLightText"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:text="ZAPOÄŒNI"
            android:textColor="@color/Pallete3" />


</RelativeLayout>