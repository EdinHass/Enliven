<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.emotions.MoodActivity"
    android:background="@drawable/gradient_dark_purple">


    <ScrollView
        android:id="@+id/moodfragmentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alata"
                android:text="Koje osjećanje danas preovladava?"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:typeface="normal" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/crta"></LinearLayout>

                <LinearLayout
                    android:layout_width="409dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/crta">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/curved_light"
                            android:clickable="true"
                            android:id="@+id/textsreca1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alata"
                                android:text="Sreća"
                                android:textColor="@color/white"
                                android:textSize="30dp" />

                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/curved_light"
                            android:clickable="true"
                            android:id="@+id/textljutnja1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:text="Ljutnja"
                                    android:textColor="@color/white"
                                    android:textSize="30dp" />

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/curved_light"
                            android:clickable="true"
                            android:id="@+id/textstrah1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:text="Strah"
                                    android:textColor="@color/white"
                                    android:textSize="30dp" />

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/curved_light"
                            android:clickable="true"
                            android:id="@+id/textstres1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:text="Stres"
                                    android:textColor="@color/white"
                                    android:textSize="30dp" />

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/curved_light"
                            android:clickable="true"
                            android:id="@+id/texttuga1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:text="Tuga"
                                    android:textColor="@color/white"
                                    android:textSize="30dp" />

                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/curved_light"
                            android:clickable="true"
                            android:id="@+id/textanksioznost1">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata"
                                    android:text="Anksioznost"
                                    android:textColor="@color/white"
                                    android:textSize="30dp" />

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>








                </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>