<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoundsPlayerActivity"
    android:id="@+id/backgroundSound"
    android:background="@drawable/gradient_dark_purple">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/soundName"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Name"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:typeface="normal" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="-120dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:src="@drawable/gifmagical2"></pl.droidsonroids.gif.GifImageView>


        <ImageView
            android:id="@+id/soundImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_above="@id/soundcontrol"
            android:layout_below="@id/soundName"
            android:layout_centerInParent="true"
            android:layout_marginTop="-120dp"
            android:src="@drawable/river1"></ImageView>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="-120dp"
            android:src="@drawable/loading_gif3"
            android:visibility="visible"></pl.droidsonroids.gif.GifImageView>

        <ImageView
            android:id="@+id/startButton"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_play_arrow_24"></ImageView>

        <RelativeLayout
            android:id="@+id/soundcontrol"
            android:layout_alignParentBottom="true"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/volumeIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_toLeftOf="@id/slider"
                    android:src="@drawable/ic_baseline_volume_up_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/slider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <com.google.android.material.slider.Slider

                    android:id="@+id/slider"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Timer Slider"
                    app:labelBehavior="floating"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:thumbColor="@color/Pallete1"
                    app:trackColorActive="@color/Pallete3"
                    app:trackColorInactive="@color/PalleteLightText"></com.google.android.material.slider.Slider>

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_toLeftOf="@id/slider"
                    android:src="@drawable/heart_empty"
                    android:layout_marginBottom="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/slider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>


    </RelativeLayout>





</RelativeLayout>