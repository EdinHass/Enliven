<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/addhabit_background"
    android:clickable="true">

    <ImageView
        android:id="@+id/habitPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_laptop" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="Online učenje"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/habitPic"
        app:layout_constraintStart_toEndOf="@+id/habitPic"
        app:layout_constraintTop_toTopOf="@+id/habitPic" />

    <RelativeLayout
        android:id="@+id/addbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:src="@drawable/ic_plus"
        android:layout_centerInParent="true"
        app:tint="@color/Pallete2" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>