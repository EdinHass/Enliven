<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/addhabit_background"
    android:clickable="true">

    <ImageView
        android:id="@+id/habitPic"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_laptop" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="336dp"
        android:layout_height="46dp"
        android:fontFamily="@font/alata"
        android:text="Online učenje"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/habitPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/habitPic"
        app:layout_constraintTop_toTopOf="@+id/habitPic"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/addbtn"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/habit_background"
        android:text="  +"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="@+id/habitName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432" />

</androidx.constraintlayout.widget.ConstraintLayout>