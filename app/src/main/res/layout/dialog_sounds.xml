<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="ZaÅ¡to zvukovi?"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textFontWeight="800"
        android:typeface="normal" />

    <LinearLayout

        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginVertical="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/curved_light"
        android:padding="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/ambzv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Ambijentalni zvukovi"
            android:textColor="@color/Pallete3"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/alata"/>

        <TextView
            android:id="@+id/ambtext"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ambzv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/ambient_info"
            android:textColor="@color/Pallete2"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/alata"/>
        <ImageView
            android:layout_marginTop="40dp"
            android:layout_below="@id/ambtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ambient_illustration2"></ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/curved_dark"
        android:padding="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/ambzv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Ambijentalni zvukovi"
            android:textColor="@color/Pallete3"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:fontFamily="@font/alata"/>

        <TextView
            android:id="@+id/ambtext1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ambzv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/ambient_info"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/alata"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/ambtext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ambient_illustration2"></ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/curved_dark"
        android:padding="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/ambzv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Ambijentalni zvukovi"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:fontFamily="@font/alata"/>

        <TextView
            android:id="@+id/ambtext2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ambzv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/ambient_info"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/alata"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/ambtext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ambient_illustration2"></ImageView>

    </RelativeLayout>

</LinearLayout>
</ScrollView>