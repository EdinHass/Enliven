<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".general_tip2"
    android:background="@drawable/gradient_dark_purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/space"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/alata"
            android:text="Enliven"
            android:layout_marginBottom="-10dp"
            android:textColor="@color/Pallete2"
            android:textSize="76dp" />

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/space"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"
            android:text="Social"
            android:layout_marginTop="-10dp"
            android:textColor="@color/Pallete3"
            android:textSize="76dp" />


    </RelativeLayout>

</FrameLayout>