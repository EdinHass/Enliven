<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcomescreen.welcome_screen2"
    android:background="@color/white">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@id/ll1"
            android:src="@drawable/reminder_image" />
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enliven Navike"
            android:layout_below="@id/ll1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Pallete3"
            android:textSize="30dp"
            android:id="@+id/mainText"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iskoristite svoj dan bolje i učinite više. \nOrganizute svoj dan po svojoj mjeri."
            android:textColor="@color/Pallete1"
            android:textSize="18dp"
            android:layout_below="@id/mainText"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alata"/>
    </RelativeLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/buttonPrev"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:text="NAZAD"
            android:textSize="14dp"
            android:background="@color/transparent"
            android:textColor="@color/PalleteLightText"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:textSize="14dp"
            android:text="NASTAVI"
            android:textColor="@color/PalleteLightText" />


</RelativeLayout>