<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sleep.sounds.SoundsPlayerActivity"
    android:id="@+id/backgroundSound"
    android:background="@drawable/gradient_dark_purple"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/soundName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="VaÅ¡ zvuk"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:typeface="normal" />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="300dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="-120dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/gifmagical2" />


        <ImageView
            android:id="@+id/soundImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true"
            android:src="@drawable/custom_sounds_image" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="-120dp"
            android:src="@drawable/loading_gif3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/startButton"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_play_arrow_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controlIcon1"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_marginEnd="5dp"
            android:layout_height="30dp"
            android:src="@drawable/rain_icon" />

        <com.google.android.material.slider.Slider
            android:layout_gravity="center"
            android:id="@+id/slider1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:trackColorActive="@color/Pallete3"
            app:trackColorInactive="@color/PalleteLightText"
            app:thumbColor="@color/Pallete1"
            app:labelBehavior="floating" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controlIcon2"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_marginEnd="5dp"
            android:layout_height="30dp"
            android:src="@drawable/wind_icon" />

        <com.google.android.material.slider.Slider
            android:layout_gravity="center"
            android:id="@+id/slider2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:trackColorActive="@color/Pallete3"
            app:trackColorInactive="@color/PalleteLightText"
            app:thumbColor="@color/Pallete1"
            app:labelBehavior="floating" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controlIcon3"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_marginEnd="5dp"
            android:layout_height="30dp"
            android:src="@drawable/thunder_icon" />

        <com.google.android.material.slider.Slider
            android:layout_gravity="center"
            android:id="@+id/slider3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:trackColorActive="@color/Pallete3"
            app:trackColorInactive="@color/PalleteLightText"
            app:thumbColor="@color/Pallete1"
            app:labelBehavior="floating" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controlIcon4"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/fire_icon" />

        <com.google.android.material.slider.Slider
            android:layout_gravity="center"
            android:id="@+id/slider4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:trackColorActive="@color/Pallete3"
            app:trackColorInactive="@color/PalleteLightText"
            app:thumbColor="@color/Pallete1"
            app:labelBehavior="floating" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controlIcon5"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/night_icon" />

        <com.google.android.material.slider.Slider
            android:layout_gravity="center"
            android:id="@+id/slider5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:trackColorActive="@color/Pallete3"
            app:trackColorInactive="@color/PalleteLightText"
            app:thumbColor="@color/Pallete1"
            app:labelBehavior="floating" />
    </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/controlIcon6"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/waves_icon" />

            <com.google.android.material.slider.Slider
                android:layout_gravity="center"
                android:id="@+id/slider6"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:trackColorActive="@color/Pallete3"
                app:trackColorInactive="@color/PalleteLightText"
                app:thumbColor="@color/Pallete1"
                app:labelBehavior="floating" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/controlIcon7"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_marginEnd="5dp"
                android:layout_height="30dp"
                android:src="@drawable/piano_icon" />

            <com.google.android.material.slider.Slider
                android:layout_gravity="center"
                android:id="@+id/slider7"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:trackColorActive="@color/Pallete3"
                app:trackColorInactive="@color/PalleteLightText"
                app:thumbColor="@color/Pallete1"
                app:labelBehavior="floating" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/controlIcon8"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_marginEnd="5dp"
                android:layout_height="30dp"
                android:src="@drawable/cafe_icon" />

            <com.google.android.material.slider.Slider
                android:layout_gravity="center"
                android:id="@+id/slider8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:trackColorActive="@color/Pallete3"
                app:trackColorInactive="@color/PalleteLightText"
                app:thumbColor="@color/Pallete1"
                app:labelBehavior="floating" />
        </LinearLayout>


    </LinearLayout>




</ScrollView>