<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Enliven" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/Pallete0</item>
        <item name="colorPrimaryVariant">@color/Pallete0</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Pallete2</item>
        <item name="colorSecondaryVariant">@color/Pallete3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Pallete0</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="colorSurface">@color/Pallete0</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="ThemeOverlay.Enliven.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/gradient_dark_purple</item>
        <item name="android:buttonBarPositiveButtonStyle">@color/Pallete3</item>
    </style>
</resources>